<?xml version="1.0" encoding="utf-8"?>

<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#e6e8eb" android:endColor="#f3f4f6" android:angle="270" />
            <stroke android:width="1dp" android:color="#c3c6cd" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#f3f4f6" android:endColor="#e6e8eb" android:angle="270" />
            <stroke android:width="1dp" android:color="#c3c6cd" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#f3f4f6" android:endColor="#e6e8eb" android:angle="270" />
            <stroke android:width="1dp" android:color="#c3c6cd" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>
