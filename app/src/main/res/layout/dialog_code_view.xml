<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="校验以下图形码"
        android:gravity="center_horizontal"
        android:textColor="#339900"
        android:layout_marginLeft="5dp"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <LinearLayout
            android:id="@+id/dialog_linear_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/dialog_view_code"
                android:layout_width="160dp"
                android:layout_height="64dp"
                android:scaleType="fitXY"
                android:background="#f1f1f1"

                />
            <LinearLayout
                android:id="@+id/dialog_code_rotate"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/dialog_view_code"
                android:background="#d7d7d7">

                <ImageView
                    android:id="@+id/default_ptr_rotate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/default_ptr_rotate"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/text_rotate_repeat"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:text="重试"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dialog_linear_code"
            android:textColor="@color/red"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <EditText
                android:id="@+id/edit_group_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLength="1"
                android:text=""
                android:singleLine="true"
                android:inputType="number"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_bg_white_green"/>
            <EditText
                android:id="@+id/edit_group_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:maxLength="1"
                android:gravity="center"
                android:text=""
                android:inputType="number"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_bg_white_green"/>
            <EditText
                android:id="@+id/edit_group_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLength="1"
                android:text=""
                android:inputType="number"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_bg_white_green"/>
            <EditText
                android:id="@+id/edit_group_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="number"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_bg_white_green"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cccccc" />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >


        <Button
            android:id="@+id/dialog_view_code_ok_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="确 定"
            android:background="@drawable/button_select_white" />
    </LinearLayout>



</LinearLayout>